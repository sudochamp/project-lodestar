		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10"
	},
	"dependencies": {
		"@auth/core": "^0.34.3",
		"@node-rs/argon2": "^2.0.2",
		"arctic": "^3.7.0",
		"nanoid": "^5.1.6",
		"nodemailer": "^7.0.10",
		"postgres": "^3.4.7",
		"svelte-maplibre": "^1.2.5"
	}
